---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import Layout from "../../layouts/Layout.astro";
import WrapperPages from "../../layouts/WrapperPages.astro";
import TitlePage from "../../components/TitlePage.astro";
---

<Layout title={t("nav.credits") + " | " + t("title")}>
  <WrapperPages>
    <div class="prose-lg max-w-[960px] h-full mx-auto my-10">
      <div class="text-center">
        <TitlePage titlePage={t("nav.credits")} />
      </div>
      <slot />
    </div>
  </WrapperPages>
</Layout>