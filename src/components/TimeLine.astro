---
const { items } = Astro.props;
import TimelineItem from "./TimelineItem.astro";
import TimelineContent from "./TimelineContent.astro";
---

<div class="relative w-full px-8">          
    <hr class="absolute top-1/2 left-0 w-full h-[2px] my-auto bg-rose-500 -z-10">
    <div class="flex gap-x-28 z-20">
        {
            items.map((item: string, index: number) => {
              let check = index === 0 ? "true" : "false";
              return <TimelineItem year={item["year"]} check={check} />
            })
        }                
    </div>
    <div class="absolute top-10 left-0 w-full">
        {
            items.map((item: string, index: number) => {
              let show = index === 0 ? true : false;
              return <TimelineContent image={item["image"]} year={item["year"]} content={item["content"]} title={item["title"]} show={show} />
            })
        }   
    </div>
</div>
