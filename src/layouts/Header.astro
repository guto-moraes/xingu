---
import LanguageSelector from "../components/LanguageSelector.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import { Image } from "astro:assets";
import Logo from "../assets/images/logo.png";
---

<header class="w-full h-20 shadow-xl">
  <nav class="max-w-[1280px] mx-auto px-4 flex justify-between items-center h-full">
    <div class="brand">
      <Image
        src={Logo}
        alt="Logo do site Desbravando o Sertão"
        title="Logo do site Desbravando o Sertão"
        class="max-w-[320px]"
      />
    </div>
    <ul class="list-none flex gap-x-3 text-sm text-white">
      <li>
        <a href="http://">{t("nav.home")}</a>
      </li>
      <li>
        <a href="http://">{t("nav.about")}</a>
      </li>
      <li>
        <a href="http://">{t("nav.ebook")}</a>
      </li>      
      <li>
        <a href="http://">{t("nav.experience-reports")}</a>
      </li>
      <li>
        <a href="http://">{t("nav.resources")}</a>
      </li>
      <li>
        <a href="http://">{t("nav.contact")}</a>
      </li>
      <li>
        <LanguageSelector />
      </li>
    </ul>
  </nav>
</header>
